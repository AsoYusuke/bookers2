<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>

    <table class="table">
      <thead>
        <tr>
         <th>
         <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
         </th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
          <%= link_to "", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <h2><strong>New book</strong></h2>
      <%= form_with model: @book, local:true do |f| %>
       <h6>Title</h6>
       <%= f.text_field :title, class: "col-xs-12 book_tetle" %>
       <h6>Opinion</h6>
       <%= f.text_area :body, class: "col-xs-12 book_body" %>
       <br>
       <%= f.submit 'Create Book', class: "btn btn btn-success col-xs-12" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="6"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>