
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">
          <thead>
            <tr>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>name:</th>
              <!--<th>name</th>-->
            </tr>
            <tr>
              <th>introduction:</th>
            <!--  <th>introduction</th>-->
            </tr>
          </tbody>
        </table>

        <h2><strong>New book</strong></h2>
        <%= form_with model: @book, local:true do |f| %>
          <h6>Title</h6>
          <%= f.text_field :title, class: "col-xs-12 book_tetle" %>

          <h6>Opinion</h6>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
          <br>
            <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <div class="col-sm-4" >
                <th>Title</th>
              </div>
              <div class="col-sm-7">
                <th>Opinion</th>
              </div>
              <div class="col-sm-1">
                <th colspan="3"></th>
              </div>
            </tr>
          </thead>
        </table>  
      </div>
    </div>
