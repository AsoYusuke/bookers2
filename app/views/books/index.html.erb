
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      <h2>User info</h2>
    
      <table class="table">
      <thead>
        <tr>
         <th>
         <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
         </th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <!--<th>name</th>-->
          </tr>
          <tr>
            <th>introduction:</th>
            <!--  <th>introduction</th>-->
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <% end %>
      </div>

      <h2><strong>New book</strong></h2>
      <%= form_with model: @book, local:true do |f| %>
       <h6>Title</h6>
       <%= f.text_field :title, class: "col-xs-12 book_tetle" %>

       <h6>Opinion</h6>
       <%= f.text_area :body, class: "col-xs-12 book_body" %>
       <br>
       <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
      <% end %>
 </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <!--<div class="col-sm-1">-->
                <th></th>
              <!--</div>-->
              <!--<div class="col-sm-4" >-->
                <th>Title</th>
              <!--</div>-->
              <!--<div class="col-sm-6">-->
                <th>Opinion</th>
              <!--</div>-->
              <!--<div class="col-sm-1">-->
                <th colspan="3"></th>
              <!--</div>-->
            </tr>
          </thead>


          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td><%= link_to book.title %></td>
              <td><%= link_to book.body %></td><br>
              <td></td>
              </div>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>