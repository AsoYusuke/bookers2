<% if @book.errors.any? %>
        <div id="error_explanation">
          <h2>error</h2>
          <ul style="color: red">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
<% end %>
  <div class="container">
    <div class="row">
      <%= render 'books/form', books: @books %>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>


          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <%= attachment_image_tag book.user, :profile_image, size: "60x60", format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
              </div>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>