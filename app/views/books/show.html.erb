<div class="container">
  <div class="row">
    <%= render 'books/form', books: @books, book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
        <tbody>
          <tr>
            <td>
            <%= attachment_image_tag @bookdetail.user, :profile_image, size: "60x60", format:'jpeg', fallback: "no_image.jpg" %><br>
				    <%= link_to @bookdetail.user.name, user_path(@bookdetail.user.id) %>
				    </td>
				    <td><%= link_to @bookdetail.title, book_path(@bookdetail.id) %></td>
				    <td><%= @bookdetail.body %></td>
  				  <% if @bookdetail.user_id == current_user.id %>
  				    <td><%= link_to "Edit", edit_book_path(@bookdetail.id), class: "btn-sm btn-success edit_book_#{@bookdetail.id}" %></th>
  				    <td><%= link_to "Destroy", book_path(@bookdetail.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn-sm btn-danger destroy_book_#{@bookdetail.id}" %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>